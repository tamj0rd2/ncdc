{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noEmit": true,
    "inlineSourceMap": true,
    "isolatedModules": false
  },
  "include": ["**/*.ts"]
}
